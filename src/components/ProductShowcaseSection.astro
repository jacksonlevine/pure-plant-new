---
import React from "react";
export interface ProductShowcaseContent {
    title: string;
    description: string;
    benefits: string[];
    productLink: string;
    reverse?: boolean;
    modelSrc: string;
}
interface Props {
    content: ProductShowcaseContent;
}

const { content } = Astro.props;

import FadeInOnScroll from "../functional-components/FadeInOnScroll";
import CTAButton from "./CTAButton.astro";
import Model3D from "../functional-components/Model3D";

const layoutOrder = content.reverse ? "md:flex-row-reverse" : "md:flex-row";

import ph32 from "../assets/images/ph32.png";
---


<div>
    <FadeInOnScroll client:load>
        {/* Top Row: Title + Description */}
        <div class={`flex flex-col ${layoutOrder} justify-center items-center mx-[10%]`}>
            <div class="w-full flex flex-col px-[2rem]">
                <h1 class="xl:!text-7xl lg:!text-4xl"><a href={content.productLink}>{content.title}</a></h1>
            </div>

            <div class="w-full flex flex-col py-[6rem]">
                <div class="px-[2rem]">
                    <h3>{content.description}</h3>
                </div>
            </div>
        </div>

        {/* Bottom Row: Model + Benefits */}
        <div class={`flex flex-col ${layoutOrder} justify-center items-center mx-[10%]`}>

            <Model3D client:load
                    src={content.modelSrc}
                    alt={`${content.title} bottle`}
                    size={{ width: "100%", height: "48rem" }}
                    className="origin-center"
            />

            <div class="grid grid-cols-2 grid-rows-2 md:flex-row justify-around w-full">
                {content.benefits.map((benefit, index) => (
                        <a href={content.productLink}
                                class="flex flex-col w-full px-[1rem] hover:scale-102 transition-all duration-400ms"
                        >
                            <img class="w-full" src={ph32.src} alt="" />
                            <h3>{benefit}</h3>
                        </a>
                ))}
            </div>
        </div>
    </FadeInOnScroll>

    <div class="py-[3rem]" />
    <CTAButton label="Continue to product" href={content.productLink} />
    <div class="py-[5rem]" />
</div>