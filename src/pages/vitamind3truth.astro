---
import Layout from '../layouts/Layout.astro';
import PrimaryHeroSection from "../components/PrimaryHeroSection.astro";
import VitaminD3TruthRevelation from "../components/VitaminD3TruthRevelation.astro";

//JSON LD stuff

const site = Astro.site ?? new URL("https://jacksonlevine.github.io");
const basePath = import.meta.env.BASE_URL ?? "/";
const siteBase = new URL(basePath, site).toString().replace(/\/$/, "");
const canonicalUrl = new URL(Astro.url.pathname, site).toString();

const structuredData = [
    {
        "@type": "WebPage",
        "@id": `${canonicalUrl}#webpage`,
        url: canonicalUrl,
        name: "The Truth About Vitamin D3",
        description:
            "Explore Pure Plant's research-backed perspective on vitamin D3 sourcing, bioavailability, and its impact on immune performance.",
        isPartOf: {
            "@id": `${siteBase}/#website`,
        },
        inLanguage: "en",
        about: {
            "@type": "Product",
            name: "PurePlant D3",
            brand: {
                "@type": "Brand",
                name: "Pure Plant",
            },
            url: `${siteBase}/products/pureplantd3`,
        },
    },
];




---

<Layout
        title="PurePlant D3 Truth"
        description="Learn why PurePlant D3 delivers superior, pine-derived vitamin D3 for immune resilience and whole-body health."
        structuredData={structuredData}
>
    <VitaminD3TruthRevelation/>
</Layout>
